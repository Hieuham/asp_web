
@{
    ViewData["Title"] = "DangKy";
}

@model TaiKhoanViewModel
<div class="container">
    <h3>Đăng ký</h3>
    <form method="post">
        <label asp-for="Username">Username: </label>
        <input asp-for="Username" type="text" class="form-control" />

        <label asp-for="Password">Password: </label>
        <input asp-for="Password" type="password" class="form-control" />

        <label asp-for="Hoten">Họ tên: </label>
        <input asp-for="Hoten" type="text" class="form-control" />

        <label asp-for="Tuoi">Tuổi: </label>
        <input asp-for="Tuoi" type="number" class="form-control" />

        <button type="submit" class="btn btn-primary">Đăng ký</button>
        @if (Model != null)
        {
            <p>Username đã nhập là: @Model.Username</p>
            <p>Password sau mã hóa là: @Model.Password</p>
            <p>Họ tên đã nhập: @Model.Hoten</p>
            <p>Tuoi đã nhập: @Model.Tuoi</p>
        }

    </form>
</div>

