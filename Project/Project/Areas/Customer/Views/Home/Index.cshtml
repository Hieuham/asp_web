<div class="row">
    <h1>Danh sách sản phẩm</h1>
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
            <div class="card w-100" style="min-height: 100%; display: flex; flex-direction: column;">
                <a asp-action="Details" asp-route-sanphamId="@item.Id">
                    <img src="@item.ImageUrl" alt="Product image" class="product-image" style="width: 100%; height: auto;">
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-title text-danger">@(string.Format("{0:N0}", item.price)) đ</h6>
                    <p class="card-text">@item.Description</p>
                    <div class="row mt-auto">
                        <div class="col-6">
                            <a href="#" class="btn btn-primary w-100">Thêm &#10084</a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-primary w-100">Mua Hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

